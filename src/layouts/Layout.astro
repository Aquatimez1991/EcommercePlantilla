---
import FloatingCartButton from '../components/FloatingCartButton.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Tu tienda de ropa online" } = Astro.props;
const showFloatingCartButton = Astro.url.pathname !== '/carrito';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <link rel="stylesheet" href="/assets/styles/variables.css">
</head>
<body class="font-rubik">
  <slot />
  {showFloatingCartButton && <FloatingCartButton />}
  
  <!-- Footer -->
  <footer class="bg-gradient-to-r from-primary-600 to-primary-700 text-white-custom py-8 mt-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Información de la empresa -->
        <div class="col-span-1 md:col-span-2">
          <h3 class="text-xl font-bold mb-4">CarpiShop</h3>
          <p class="text-primary-200 mb-4">
            Tu tienda de ropa online con la mejor calidad y los mejores precios. 
            Ofrecemos una amplia variedad de productos para todos los estilos.
          </p>
          <div class="flex space-x-4">
            <a href="#" class="text-primary-200 hover:text-white-custom transition-colors">
              <i class="bi bi-facebook text-xl"></i>
            </a>
            <a href="#" class="text-primary-200 hover:text-white-custom transition-colors">
              <i class="bi bi-instagram text-xl"></i>
            </a>
            <a href="#" class="text-primary-200 hover:text-white-custom transition-colors">
              <i class="bi bi-twitter text-xl"></i>
            </a>
          </div>
        </div>
        
        <!-- Enlaces rápidos -->
        <div>
          <h4 class="font-semibold mb-4">Enlaces Rápidos</h4>
          <ul class="space-y-2">
            <li><a href="/" class="text-primary-200 hover:text-white-custom transition-colors">Inicio</a></li>
            <li><a href="/sobre-nosotros" class="text-primary-200 hover:text-white-custom transition-colors">Sobre Nosotros</a></li>
            <li><a href="/contacto" class="text-primary-200 hover:text-white-custom transition-colors">Contacto</a></li>
            <li><a href="/preguntas-frecuentes" class="text-primary-200 hover:text-white-custom transition-colors">FAQ</a></li>
          </ul>
        </div>
        
        <!-- Enlaces legales -->
        <div>
          <h4 class="font-semibold mb-4">Legal</h4>
          <ul class="space-y-2">
            <li><a href="/terminos-condiciones" class="text-primary-200 hover:text-white-custom transition-colors">Términos y Condiciones</a></li>
            <li><a href="/politica-privacidad" class="text-primary-200 hover:text-white-custom transition-colors">Política de Privacidad</a></li>
            <li><a href="/preguntas-frecuentes" class="text-primary-200 hover:text-white-custom transition-colors">Preguntas Frecuentes</a></li>
          </ul>
        </div>
      </div>
      
      <div class="border-t border-primary-500 mt-8 pt-8 text-center">
        <p class="text-primary-200">
          © 2024 CarpiShop. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </footer>
  
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    import { initPageTransitions } from '../scripts/pageTransitions.ts';
    initPageTransitions();
  </script>
</body>
</html> 