---
import type { Producto } from '../data/productos';

export interface Props {
  producto: Producto;
}

const { producto } = Astro.props;
---

<div class="relative group transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
  <a href={`/productos/${producto.id}`} class="block relative">
    <img class="w-full rounded-2xl transition-transform duration-300 group-hover:scale-105 cursor-pointer shadow-lg" src={producto.imagen} alt={producto.titulo} />
    <span class="absolute top-3 left-3 bg-white/90 text-primary-700 text-xs font-bold px-3 py-1 rounded-full shadow-sm border border-primary-100 select-none">
      {producto.categoria?.nombre}
    </span>
  </a>
  <div class="bg-gradient-to-br from-primary-50 to-white text-primary-900 p-4 rounded-2xl -mt-8 relative z-10 flex flex-col gap-2 shadow-lg border border-primary-100">
    <h3 class="text-lg font-bold leading-tight line-clamp-2 min-h-[2.5rem]">{producto.titulo}</h3>
    <p class="text-base font-semibold text-primary-700 mb-2">${producto.precio.toLocaleString()}</p>
    <button 
      class="border-2 border-primary-600 bg-primary-600 text-white py-2 px-4 uppercase rounded-xl cursor-pointer font-semibold text-sm transition-all duration-200 hover:bg-primary-700 hover:border-primary-700 hover:scale-105 shadow-md flex items-center justify-center gap-2"
      data-producto-id={producto.id}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
      </svg>
      Agregar
    </button>
  </div>
</div> 