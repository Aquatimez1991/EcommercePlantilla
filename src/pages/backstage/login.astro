---
import { useState } from 'react';
---
<html lang="es">
  <head>
    <title>Login Backstage | CarpiShop</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
  </head>
  <body class="bg-gradient-to-br from-primary-600 to-primary-700 min-h-screen flex items-center justify-center font-rubik">
    <div class="bg-white-custom rounded-2xl shadow-xl p-8 w-full max-w-md flex flex-col gap-6">
      <h1 class="text-2xl font-bold text-primary-700 text-center mb-2 flex items-center justify-center gap-2">
        <i class="bi bi-person-badge"></i> Backstage Login
      </h1>
      <form id="login-form" class="flex flex-col gap-4">
        <div>
          <label class="block text-sm font-medium text-primary-700 mb-1">Usuario</label>
          <input type="text" id="username" class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500" required />
        </div>
        <div>
          <label class="block text-sm font-medium text-primary-700 mb-1">Contrase침a</label>
          <input type="password" id="password" class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500" required />
        </div>
        <div class="flex gap-2">
          <button type="submit" class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white py-2 rounded-xl font-semibold hover:from-primary-700 hover:to-primary-800 transition-all duration-200 hover:scale-105 hover:shadow-lg flex items-center justify-center gap-2">
            <i class="bi bi-box-arrow-in-right"></i> Ingresar
          </button>
          <a href="/" class="w-full">
            <button type="button" class="w-full bg-neutral-100 hover:bg-neutral-200 text-primary-700 font-semibold py-2 rounded-xl flex items-center justify-center gap-2 border border-neutral-300 transition-all duration-200 hover:scale-105 hover:shadow-lg">
              <i class="bi bi-house-door"></i> Volver al inicio
            </button>
          </a>
        </div>
        <p id="login-error" class="text-error-500 text-center text-sm hidden">Usuario o contrase침a incorrectos</p>
      </form>
      <div class="text-center mt-2">
        <p class="text-neutral-500 text-sm mb-2">Pr칩ximamente: login seguro con Google</p>
        <button disabled class="bg-neutral-200 text-neutral-500 px-4 py-2 rounded-md flex items-center gap-2 mx-auto cursor-not-allowed">
          <i class="bi bi-google"></i> Ingresar con Google
        </button>
      </div>
    </div>
    <script>
      // Redirigir si ya est치 logueado
      if (localStorage.getItem('backstageAuth') === 'true') {
        window.location.href = '/backstage';
      }
      const form = document.getElementById('login-form');
      const errorMsg = document.getElementById('login-error');
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        if (username === 'user' && password === 'user') {
          localStorage.setItem('backstageAuth', 'true');
          window.location.href = '/backstage';
        } else {
          errorMsg.classList.remove('hidden');
        }
      });
    </script>
  </body>
</html> 